@page
@model Exercise_RAZOR_Book_.Pages.DashboardModel
@{
}
<h2>DASHBOARD</h2>

@if(Model.UserName!=null)
{
    <p>WELCOME, @Model.UserName!!!</p>

    <a asp-page="/Profile">MY PROFILE</a>
    <a asp-page="/LOGOUT">LOGOUT</a>


}



<form method="get">
    <div>
        <input type="text" name="search" class="form-control" value="@Model.Search" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>

</form>

<p>Total Books:@Model.TotalCount</p>

<p>
    <a asp-page="/Createbook">Add New Book</a>
</p>

@if(Model.Booklist!=null && Model.Booklist.Any())
{
    <table class="table-bordered">
        <thead>
            <tr>
                <th>Title</th>
            
                <th>Genre</th>
                <th>Author</th>
                <th>PublishedDate</th>
                <th>Description</th>
                <th>Price</th>
                <th>Publisher</th>
            
            </tr>
        </thead>

        <tbody>
            @foreach(var b in Model.Booklist)
            {

                <tr>
                    <td>@b.Title</td>
                    <td>@b.Author</td>
                    <td>@b.PublishedDate</td>
                    <td>@b.Description</td>
                    <td>@b.Price</td>
                    <td>@b.Publisher</td>

                    <td>
                        <a asp-page="EditBook" asp-route-id="@b.Id">Edit</a>
                         <a asp-page="DetailsBook" asp-route-id="@b.Id">Details</a>
                        <a asp-page="DeleteBook" asp-route-id="@b.Id">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    
}


else
{
    <p>No books found.</p>
}
