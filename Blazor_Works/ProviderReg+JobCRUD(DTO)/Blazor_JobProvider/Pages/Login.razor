@page "/login"
@using Blazor_JobProvider.Dto
@using Blazor_JobProvider.Interface
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject IAuthService _service
@inject NavigationManager Navigation
@inject ProtectedSessionStorage SessionStorage


<div class="container justify-content-center align-items-center vh-100">

    <div class="card" style="width:400px">
        <div class="card-header bg-success text-center text-white">
            <h3>Job Provider Login</h3>
        </div>

        <div class="card-body">
            <EditForm Model="loginDto" OnValidSubmit="LoginProvider">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label class="form-label fw-bold">Email:</label>
                    <InputText class="form-control" @bind-Value="loginDto.Email" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Password:</label>
                    <InputText class="form-control" @bind-Value="loginDto.Password" Type="password" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </button>
                </div>
            </EditForm>
            @if (!string.IsNullOrEmpty(Message))
            {
                <div class="alert alert-danger text-center">@Message</div>
            }
           </div>
    </div>

</div>


@code{
    private LoginDto loginDto = new();
    private string Message = "";

    private async Task LoginProvider()
    {
        var success = await _service.Loginprovider(loginDto.Email, loginDto.Password);
        if (success)
        {
            Navigation.NavigateTo("/joblist");
        }
        else
        {
            Message = "Invalid login credentials.";
        }
    }


}