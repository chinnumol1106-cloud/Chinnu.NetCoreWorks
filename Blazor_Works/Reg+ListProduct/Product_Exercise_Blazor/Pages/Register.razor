@page "/Register"
@using Product_Exercise_Blazor.Dto
@using Product_Exercise_Blazor.Service
@inject IUserService _service
@inject NavigationManager Navigation

<div class="container justify-content-center align-items-center vh-100">

    <div class="card" style="width:400px;">
        <div class="card-header bg-info text-white text-center">
            <h3>User Registration Form</h3>

        </div>
        <div class="card-body">
            <EditForm Model="InputRegister" OnValidSubmit="RegisterUser">
             <DataAnnotationsValidator/>

             <div>
                 <label>Name</label>
                 <InputText @bind-Value="InputRegister.Name"/>
             </div>
                <div>
                    <label>Email</label>
                    <InputText @bind-Value="InputRegister.Email" />
                </div>

                <div>
                    <label>Password</label>
                    <InputText @bind-Value="password" />
                </div>


                <div>
                    <button type="submit" class="btn btn-primary">REGISTER</button>

                </div>



            </EditForm>
            @if(!string.IsNullOrEmpty(Message))
            {
                <div class="alert alert-danger text-center">@Message</div>
            }


            <div class="text-center mt-3">
                <p>Already have an account? <a href="/login" class="text-decoration-none">Login</a></p>
            </div>
        </div>

    </div>

</div>


@code {
    private RegisterDto InputRegister = new();
    private string password = "";
    private string Message = "";


    private async Task RegisterUser()
    {
        var success = await _service.Registeruser(InputRegister, password);
        if(success)
        {
            Navigation.NavigateTo("/login");
        }
        else
        {
            Message = "Email already Registered";
        }
    }


}
